@using Microsoft.AspNetCore.Identity
@using EcommerceCoreAngular.Models

@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right m-r-15">
        <ul class="nav navbar-top-links navbar-right pull-right">
            <li class="dropdown">
                <a class="dropdown-toggle profile-pic" data-toggle="dropdown" aria-expanded="false"><b class="hidden-xs">Hello @UserManager.GetUserName(User)</b> </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a asp-area="Admin" asp-controller="Products" asp-action="Index">
                            <b>
                                Admin Panel 1
                            </b>
                        </a>
                    </li>
                    <li class="divider"></li>
                    <li><button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button></li>

                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}