@model LoginVM
@{
    Layout = "~/Views/Shared/_FrontendLayout.cshtml";
}

<body>
    <section id="wrapper">
        <div class="login-box">
            <div class="white-box">
                <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" id="loginform">
                    <h3 class="box-title m-b-20 m-t-30">Sign In</h3>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" type="text" placeholder="User name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase" type="submit">Login</button>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary m-l-5"><b>Sign Up</b></a></p>
                        </div>
                    </div>
                </form>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    </section>
</body>